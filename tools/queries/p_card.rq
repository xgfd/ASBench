SELECT ?p ?s_count ?o_count ?t ((?t/?s_count) AS ?card) ((?t/?o_count) AS ?inverseCard)
WHERE {

    {SELECT ?p (COUNT (*) AS ?t) (COUNT (DISTINCT ?s) AS ?s_count) (COUNT (DISTINCT ?o) AS ?o_count)
        WHERE { VALUES ?p {$1} ?s ?p ?o}} 
}
